{% macro get_check_category(check_label) %}
{% if check_label.startswith('lb_') or check_label.startswith('private_lb_') %}
api
{% elif check_label in ['rsyslogd_process_check', 'pacemaker_check', 'multipathd_process_check', 'tgtd_process_check', 'container_conntrack_count', 'container_storage_check', 'holland_local_check', 'maas_poller_fd_count', 'memcached_status'] or check_label.startswith('galera') or check_label.startswith('rabbitmq') %}
infrastructure
{% elif check_label in ['nfs_check', 'conntrack_count', 'cpu_check', 'memory_check', 'private_ping_check', 'private_ssh_check', 'host_bonding_iface_status_check', 'network_stats_check'] or check_label.startswith('disk_utilisation') or check_label.startswith('filesystem') or check_label.startswith('network_throughput') %}
host
{% elif check_label in ['hp-check', 'openmanage-memory', 'openmanage-processors', 'openmanage-vdisk', 'openmanage-pwrsupplies'] %}
host {# we can change to hardware here if we want #}
{% else %}
{{ check_label.split('_')[0] }}
{% endif %}
{% endmacro %}


