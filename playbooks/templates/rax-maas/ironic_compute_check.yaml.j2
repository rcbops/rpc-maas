{% from "templates/common/macros.jinja" import get_metadata with context %}
{% set label = "ironic_compute_check" %}
{% set check_name = label+'--'+inventory_hostname %}
{% set service_host = ansible_nodename + ansible_local['maas']['general']['local_suffix'] | default('') %}
type        : agent.plugin
label       : "{{ check_name }}"
period      : "{{ maas_check_period_override[label] | default(maas_check_period) }}"
timeout     : "{{ maas_check_timeout_override[label] | default(maas_check_timeout) }}"
disabled    : "{{ (check_name | regex_search(maas_excluded_checks_regex)) | ternary('true', 'false') }}"
details     :
    file    : run_plugin_in_venv.sh
    args    : ["{{ maas_plugin_dir }}/ironic_compute_nova_service_check.py", "--host", "{{ service_host }}", "{{ internal_vip_address }}", "--protocol", "{{ nova_service_check_protocol }}", "--port", "{{ nova_service_check_port }}"]
    timeout : {{ (maas_check_timeout_override[label] | default(maas_check_timeout) * 1000) }}
{{ get_metadata(label).strip() }}
{# Add extra metadata options with two leading white spaces #}
alarms      :
    ironic_compute_status :
        label                   : ironic_compute_status--{{ inventory_hostname }}
        notification_plan_id    : "{{ maas_notification_plan_override[label] | default(maas_notification_plan) }}"
        disabled                : {{ (('ironic_compute_status--'+inventory_hostname) | regex_search(maas_excluded_alarms_regex)) | ternary('true', 'false') }}
        criteria                : |
            :set consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["ironic-compute_status"] != 1) {
                return new AlarmStatus(CRITICAL, "ironic-compute down");
            }
